@import "../style.styl";

//
// ScrollTop
// --------------------------------------------------

.scrollTop 
	text-align right
	z-index 1
	position fixed
	bottom -70px
	right 15px
	padding 0
	-webkit-transition all 0.3s ease-out 
	-moz-transition all 0.3s ease-out
	-o-transition all 0.3s ease-out
	transition all 0.3s ease-out
	a
		border-left 2px solid #333
		border-top 2px solid #333
		width 30px
		height 30px
		transform rotate(45deg)
		display inline-block
		border-right 0
		border-bottom 0
		margin 10px 5px 0 0
		-webkit-transition all 0.3s ease-out 
		-moz-transition all 0.3s ease-out
		-o-transition all 0.3s ease-out
		transition all 0.3s ease-out

		@media (min-width: width-tabletportrait)
			margin 20px 5px 0 0

		&:hover, &:focus
			border-color site-green

			@media (min-width: width-tabletportrait)
				bottom -1.65em
				right -1.4em

	&.appear
		bottom 20px

		@media (min-width: width-tabletportrait)
			bottom 30px

		@media (min-width: width-tabletlandscape)
			bottom 20px		