@import "../style.styl";

//
// Header
// --------------------------------------------------

.js div#preloader
	position fixed
	left 0
	top 0
	z-index 9999
	width 100%
	height 100%
	overflow visible
	background #fff url(img-folder loader.gif) no-repeat center center
	
header
	position relative
	z-index 1030
	.container
		width 100%
		text-align center
	
	.navbar-nav
		background-color site-white
		width 100%
		padding 80px 20px 20px
		margin-top 0

.navbar-brand
	position absolute
	left 50%
	top 25px
	font-family 'Quicksand', sans-serif
	font-weight 300
	font-size 40px
	text-shadow -16px 11px 2px rgba(150, 150, 150, 0.3)

	@media (min-width: width-tabletportrait)
		font-size 50px
	
	span
		font-size 70px
		line-height 8px
		margin-left -6px
		position absolute
		top 0
		margin-top 24px
		
		@media (min-width: width-tabletportrait)
			font-size 100px
			line-height 2px
			margin-left -7px
			margin-top 28px

nav
	&.navbar-default
		border 0
		border-radius 0
		background-color transparent
		margin 0
		
		.navbar-toggle:focus, .navbar-toggle:hover
			background-color transparent
				
		.navbar-brand
			color site-dark-grey
	
	.container-fluid
		padding 0

.nav-open
	header
		background-color site-white
	
.navbar-header
	float none
	
	.icon-bar
		transition all 0.2s;
		width 30px
		
		@media (min-width: width-tabletportrait)
			width 40px

	.top-bar
		transform rotate(45deg)
		transform-origin 10% 10%

	.middle-bar
		opacity 0

	.bottom-bar
		transform rotate(-45deg)
		transform-origin 10% 90%
		margin-top 5px
		
		@media (min-width: width-tabletportrait)
			margin-top 11px

.navbar-default			
	.navbar-toggle
		display block
		border 0
		border-radius 0
		margin-right 0
		position absolute
		top 0
		right 0
		padding-right 20px
		margin-top 10px
		z-index 2

		@media (min-width: width-tabletportrait)
			margin-top 15px
			padding-right 25px

		.icon-bar
			background-color site-dark-grey

		&:hover .icon-bar, &:focus .icon-bar
			background-color site-green

		&.collapsed
			.top-bar
				transform: rotate(0);

			.middle-bar
				opacity 1 
				margin-top 7px

			.bottom-bar
				transform rotate(0)
				margin-top 7px

			.icon-bar
				width 30px 

				@media (min-width: width-tabletportrait)
					width 40px

		.icon-bar+.icon-bar
			margin-top 6px

			@media (min-width: width-tabletportrait)
				margin-top 9px

.navbar-collapse
	border-top 1px solid transparent
	box-shadow inset 0 1px 0 rgba(255,255,255,0.1)
	padding 0
	
	&.collapse
		@media (min-width: width-tabletportrait)
			height 1px!important
			display none!important
			
	&.in
		@media (min-width: width-tabletportrait)
			height auto!important
			display block!important
			
	li
		display block
		float none

.navbar>.container-fluid .navbar-brand
	position absolute
	width 100%
	height auto
	text-align center
	top 0
	left 0
	margin 10px 0 0
	z-index 1